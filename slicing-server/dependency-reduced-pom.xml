<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>bigslice-parent</artifactId>
    <groupId>com.longevitysoft.java</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.longevitysoft.java</groupId>
  <artifactId>bigslice-slicing-server</artifactId>
  <name>BigSlice :: Slicing Server</name>
  <version>1.0-SNAPSHOT</version>
  <description>A server that takes STL files and slices them using Slic3r command line execution.</description>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-artifacts</id>
            <phase>package</phase>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <file>target/classes/features.xml</file>
                  <type>xml</type>
                  <classifier>features</classifier>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <configuration>
          <mainClass>${target.main.class}</mainClass>
          <includePluginDependencies>false</includePluginDependencies>
          <commandlineArgs>${target.cmd.args}</commandlineArgs>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.camel</groupId>
        <artifactId>camel-maven-plugin</artifactId>
        <configuration>
          <applicationContextUri>META-INF/spring/*.xml</applicationContextUri>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <excludes>
                  <exclude>bouncycastle:bcprov-jdk16</exclude>
                </excludes>
              </artifactSet>
              <transformers>
                <transformer>
                  <mainClass>org.apache.camel.spring.Main</mainClass>
                </transformer>
                <transformer>
                  <resource>camel.properties</resource>
                </transformer>
                <transformer>
                  <resource>runtime.properties</resource>
                </transformer>
                <transformer>
                  <resource>log4j.properties</resource>
                </transformer>
                <transformer>
                  <resource>camel-server.xml</resource>
                </transformer>
                <transformer>
                  <resource>features.xml</resource>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <mainClass>org.apache.camel.spring.Main</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>SlicingServer</id>
      <properties>
        <target.main.class>org.apache.camel.spring.Main</target.main.class>
        <target.cmd.args>-ac META-INF/spring/camel-server.xml</target.cmd.args>
      </properties>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>org.apache.camel</groupId>
      <artifactId>camel-test</artifactId>
      <version>2.11.0</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>junit</artifactId>
          <groupId>junit</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.apache.camel</groupId>
      <artifactId>camel-test-spring</artifactId>
      <version>2.11.0</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>spring-test</artifactId>
          <groupId>org.springframework</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <camel.osgi.export.pkg>com.longevitysoft.java.*</camel.osgi.export.pkg>
    <camel.osgi.import.additional>org.apache.activemq.*,org.apache.camel.*</camel.osgi.import.additional>
  </properties>
</project>

